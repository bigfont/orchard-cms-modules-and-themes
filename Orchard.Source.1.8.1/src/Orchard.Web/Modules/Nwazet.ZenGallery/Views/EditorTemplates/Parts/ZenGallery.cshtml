@model Nwazet.ZenGallery.ViewModels.ZenGalleryPartEditViewModel
@{
    Style.Include("zengallery.css");
}
<fieldset><legend>@T("Gallery Image Path")</legend>
    @Html.TextBoxFor(m => m.Path, new { @class = "text-box textMedium" })
    <span class="hint">@T("Leave empty to let the path be generated by the current pattern ('{0}') on publish", Model.PathPattern)</span>
    @if (!String.IsNullOrWhiteSpace(Model.Path) &&
        Model.Images != null && Model.Images.Any()) {
        @Html.ActionLink(T("Manage this folder").Text,
            "Index", "Admin", new {
                area = "Orchard.MediaLibrary",
                folderPath = Model.Path.Replace('/', '\\')
            },
            null
        )
        <ul class="gallery">
            @foreach (var image in Model.Images) {
                <li>
                    <img class="thumbnail" src="@image.MediaUrl" alt="@image.MediaUrl"/>
                </li>
            }
        </ul>
    }
</fieldset>
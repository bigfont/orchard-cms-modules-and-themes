@using Orchard.ContentManagement;
@using Orchard.Widgets.Models;
@{
    var widgetPart = ((IContent)Model.ContentItem).As<WidgetPart>();
    var tag = Tag(Model, "article");
}

@helper SuperTitle(string title)
{
    var separatorIndex = title.LastIndexOf(' ');
    var lead = string.Empty;
    var theRest = string.Empty;
    if (separatorIndex > 0)
    {
        lead = title.Substring(0, separatorIndex);
        theRest =
            title.Substring(separatorIndex, title.Length - separatorIndex);
    }
    <small>@lead</small>@theRest
}

@tag.StartElement
@if ((widgetPart.RenderTitle && HasText(widgetPart.Title)) || Model.Header != null)
{
    <header>
        @if ((widgetPart.RenderTitle && HasText(widgetPart.Title)))
        {
            <h1>@SuperTitle(@widgetPart.Title)</h1>
        }
        @Display(Model.Header)
    </header>
}
@Display(Model.Child)
@if (Model.Footer != null)
{
    <footer>
        @Display(Model.Footer)
    </footer>
}
@tag.EndElement
@using Orchard.Taxonomies.Models
@using Orchard.Mvc.Extensions
@using Orchard.ContentManagement;


@{
    var childMenuItems = Enumerable.Cast<dynamic>(Model.Items);
    for (var i = 0; i < childMenuItems.Count; ++i)
    {
        var childMenuItem = childMenuItems[i];
        if (childMenuItem.Content is TermPart)
        {
            continue; // don't display taxonomy link items
        }
        else
        {
            @Display.FooterMenuItem(Item: childMenuItem.Item)
        }
    }
}           
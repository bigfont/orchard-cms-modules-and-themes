@{
    var collapseId = "navbar-collapse-" + DateTime.Now.Ticks;
    foreach (var item in Model.Content.Items)
    {
        // todo make this more specific
        item.Id = collapseId;
    }
}

<nav class="navbar navbar-default">

    <div class="container-fluid">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#@collapseId">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><span>@WorkContext.CurrentSite.SiteName</span></a>
        </div>

        @Display(Model.Content)

    </div>

</nav>